
@model TODOList.Models.IndexViewModel
<h3> TODO List</h3>

<div class="panel-body">
    <div class="task-content">
        <ul class="task-list">
            @foreach (var item in Model.TodoList)
            {
                <li>
                    <div class="task-checkbox">
                        <input type="checkbox" class="list-child" checked=@item.IsDone>
                    </div>
                    <div class="task-title">
                        @Html.Label("myTextBox", @item.Description, new { @id = item.ID })
                        <div class="pull-right hidden-phone">
                            @*<button class="btn btn-success btn-xs"><i class=" fa fa-check"></i></button>*@
                            <button type="button"  class="btn btn-primary btn-xs editTask" data-toggle="modal" data-target="#editModal"><i class="fa fa-pencil"></i></button>
                            <button type="button" class="btn btn-danger btn-xs deleteTask" data-toggle="modal" data-target="#deleteModal"><i class="fa fa-trash-o"></i></button>
                        </div>
                    </div>

                </li>
            }

        </ul>
    </div>
    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#addModal">Add task</button>

    @{
        Html.RenderPartial("_AddTask");
        Html.RenderPartial("_EditTask");
        Html.RenderPartial("_DeleteTask");
    }

</div>